{
  "compilerOptions": { // Carpeta donde se encuentran los archivos .ts
    "target": "es2016",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "../frontend/src/Scripts",
  },
  "include": ["../frontend/src/**/*", "./backend/src/**/*"],
  "exclude": ["./node_modules"]
}